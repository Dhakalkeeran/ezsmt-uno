% ezcsp --bprolog -n 0 ezcsp-lprog-3.ez

cspdomain(lp).
cspvar(x1,0,40).
cspvar(x2,0,100).
cspvar(x3,0,100).
required(x2-x1+x3 <= 20).
%required(-1*x1+x2+x3 <= 20).
required(x1-3*x2+x3 <= 30).

cspvar(obj).%,0,1000).
required(obj = x1+x2+3*x3).
lpobjective(max(obj)).
%lpobjective(max(x1+x2+3*x3)).

lpinteger(x2).
lpinteger(x3).
